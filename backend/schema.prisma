datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id             String    @id @default(cuid())
  username       String    @unique @default("")
  password       String
  apiKey         String    @default("")
  money          Int       @default(10000000)
  email          String    @default("")
  trades         Trade[]   @relation("Trade_owner")
  stocks         Stock[]   @relation("Stock_owner")
  shortTermTaxes Int?      @default(35)
  longTermTaxes  Int?      @default(15)
  createdAt      DateTime? @default(now())
  useTaxes       Boolean   @default(false)
  darkMode       Boolean   @default(false)
}

model Trade {
  id          String    @id @default(cuid())
  symbol      String    @default("")
  amount      Int
  price       Int
  dateOfTrade DateTime? @default(now())
  buySell     Boolean   @default(true)
  owner       User?     @relation("Trade_owner", fields: [ownerId], references: [id])
  ownerId     String?   @map("owner")

  @@index([ownerId])
}

model Stock {
  id          String    @id @default(cuid())
  symbol      String    @default("")
  amount      Int
  price       Int
  createdAt   DateTime? @default(now())
  dateOfTrade DateTime? @default(now())
  owner       User?     @relation("Stock_owner", fields: [ownerId], references: [id])
  ownerId     String?   @map("owner")

  @@index([ownerId])
}

model CacheStorage {
  id         String    @id @default(cuid())
  symbol     String    @default("")
  price      Int
  identifier String    @unique @default("")
  createdAt  DateTime? @default(now())
  date       DateTime? @default(now())
}
